{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "downlevelIteration": true,
        "module": "es2015",
        "moduleResolution": "node",
        "outDir": "./ts/",
        "resolveJsonModule": true,
        "target": "es2016",
        "lib": [
            "DOM",
            "ES2019"
        ]
    },
    "include": [
        "app/**/*",
        "lib/**/*",
        "test/**/*"
    ]
}
